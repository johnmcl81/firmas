extends layout

block content
    h1= "Crear Firma"
    form(name="create-firma", method="post", action="/firma")
        div.input
          span.label Name
            input(type="text", name="name")
        div.input
          span.label Job
            input(type="text", name="job")
        div.input
          span.label Web
            input(type="text", name="web")
        div.input
          span.label Photo
            input(type="text", name="photo")
        div.actions
            input(type="submit", value="create")
